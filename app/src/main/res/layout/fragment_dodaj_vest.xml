<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/naslovOglasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Naslov oglasa"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/marka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Unesite marku vozila"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/godite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Godiste"
        android:inputType="number" />

    <EditText
        android:id="@+id/Kubikaza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Kubikaza"
        android:inputType="number" />


    <EditText
        android:id="@+id/Cena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:ems="10"
        android:hint="Cena"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/textOglasa"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Unesite tekst oglasa"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/dodajVest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj oglas" />


</LinearLayout>